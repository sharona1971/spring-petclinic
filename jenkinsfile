#!/usr/bin/env groovy

def imageId = "use-name/image-name:1.$BUILD_NUMBER"

pipeline {
    agent {
        any {
            image 'maven:3.8.1-adoptopenjdk-11' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
	stages {
        stage('Build') { 
            steps {
                sh 'mvn -B clean package' 
            }
        }
    }
	stage('Docker Build') {
					steps {
						script {
							sh "./mvnw spring-boot:build-image"
"
						}
					}
				}
		stage('Docker Deploy'){
			steps {
				sh "docker stop spring-petclinic:2.6.0-SNAPSHOT | true"
				sh "docker rm spring-petclinic:2.6.0-SNAPSHOT | true"
				sh "docker run --name spring-petclinic:2.6.0-SNAPSHOT -d -p 9090:8080 
			}
		}
}