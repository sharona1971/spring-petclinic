pipeline {
    agent any {
		image 'maven:3.8.1-adoptopenjdk-11' 
        args '-v /root/.m2:/root/.m2'  

    environment {
        DATE = new Date().format('yy.M')
        TAG = "${DATE}.${BUILD_NUMBER}"
    }
    stages {
        stage ('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build') {
            steps {
                    docker build --tag $BUILD_NUMBER/$TAG
            }
		}
    }
}