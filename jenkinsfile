pipeline {
    agent any {
		image 'maven:3.8.1-adoptopenjdk-11' 
        args '-v /root/.m2:/root/.m2'  
    }
    stages {
        stage ('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build') {
            steps {
                    docker build --tag petclinic/1
            }
		}
    }
}



pipeline {
    agent {
        any {
            image 'maven:3.8.1-adoptopenjdk-11' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
    stages {
        stage('Maven Build') { 
            steps {
                sh 'mvn -B clean package' 
            }
        }
		stage('Docker Build') { 
            steps {
                sh 'docker build --tag Petclinic' 
            }
        }
    }
}